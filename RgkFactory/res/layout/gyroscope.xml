<?xml version="1.0" encoding="utf-8"?> 

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android" 
  android:id="@+id/gyroscope_layout" 
  android:layout_width="fill_parent" 
  android:layout_height="fill_parent"
  android:background="#ff000000">
  	<TextView
  	    android:id="@+id/gyroscope_test_title" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textColor="#32cd32"
	    android:textSize="18dp"/>
  	 <LinearLayout
  	      android:layout_below="@id/gyroscope_test_title"
	      android:orientation="horizontal" 
	      android:layout_width="fill_parent" 
	      android:layout_height="wrap_content"
	      android:layout_marginTop="20dp"
	      android:gravity="center">
	      <TextView
		  android:id="@+id/gyroscope_test_item"
		  android:layout_width="wrap_content" 
		  android:textColor="#32cd32"
		  android:layout_height="wrap_content"
		  android:textSize="20sp"
		  android:text="@string/gyroscope_test_item"/>
		  <TextView
		  	android:id="@+id/gyroscope_test_result"
			android:layout_width="wrap_content" 
			android:textColor="#32cd32"
			android:textSize="20sp"
			android:layout_marginLeft="50dp"
			android:layout_height="fill_parent"/>
	</LinearLayout>     
	<LinearLayout
		android:orientation="vertical"
		android:layout_alignParentBottom="true"
		android:layout_width="fill_parent" 
		android:layout_height="100dip">
		<Button 
			android:id="@+id/gyroscope_pass"
			android:layout_width="fill_parent"
			android:layout_height="0dp"  
			android:layout_weight="1" 
			android:textSize="35sp"
			android:text="@string/pass"
			android:visibility="gone"/>
		<Button
		    android:id="@+id/gyroscope_fail"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:textSize="35sp"
		    android:text="@string/fail"/>
     </LinearLayout>
</RelativeLayout>