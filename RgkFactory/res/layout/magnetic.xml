<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android" 
  android:id="@+id/magnetic_layout" 
  android:layout_width="fill_parent" 
  android:layout_height="fill_parent"
  android:background="#ff000000">
  	<TextView
  	    android:id="@+id/magnetic_title" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textColor="#32cd32"
	    android:textSize="20sp"
	    android:text="@string/shake_hint"/>
	<TextView
	    android:id="@+id/magnetic_content"
	    android:layout_below="@id/magnetic_title"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:textColor="#32cd32"
	    android:textSize="20sp"/>
     
     <LinearLayout
	    android:orientation="vertical" 
            android:layout_alignParentBottom="true"
	    android:layout_width="fill_parent" 
            android:layout_height="200dip">
	    <Button 
                android:id="@+id/magnetic_pass"
            	android:layout_width="fill_parent"
		android:layout_height="0dip"  
		android:layout_weight="1" 
		android:textSize="35sp"
            	android:text="@string/pass"/>
            
            <Button 
                android:id="@+id/magnetic_fail"
     	        android:layout_width="fill_parent"
		android:layout_height="0dip"  
		android:layout_weight="1"   
		android:textSize="35sp" 
		android:text="@string/fail"/>
     </LinearLayout>
</RelativeLayout>