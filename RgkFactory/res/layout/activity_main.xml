<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#000000"
    android:orientation="vertical" >

    
    <ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical">
    <Button
        android:id="@+id/auto_test"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:onClick="autotest"
        android:text="@string/auto_test"
        android:textColor="#000000" />

    <Button
        android:id="@+id/item_test"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/auto_test"
        android:layout_below="@+id/auto_test"
        android:layout_marginTop="14dp"
        android:background="@drawable/button"
        android:onClick="itemtest"
        android:text="@string/item_test"
        android:textColor="#000000" />
<!-- 
    <Button
        android:id="@+id/soft_version"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_test"
        android:layout_below="@+id/item_test"
        android:layout_marginTop="14dp"
        android:background="@drawable/button"
        android:onClick="softversion"
        android:text="@string/soft_version"
        android:textColor="#000000" />
-->
    <Button
        android:id="@+id/Clean"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_test"
        android:layout_below="@+id/item_test"
        android:layout_marginTop="14dp"
        android:background="@drawable/button"
        android:onClick="clean"
        android:text="@string/clean"
        android:textColor="#000000" />

    <Button
        android:id="@+id/TestResults"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Clean"
        android:layout_below="@+id/Clean"
        android:layout_marginTop="14dp"
        android:background="@drawable/button"
        android:onClick="testResults"
        android:text="@string/test_results"
        android:textColor="#000000" />
<!--
    <Button
        android:id="@+id/ChangeLanguage"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TestResults"
        android:layout_below="@+id/TestResults"
        android:layout_marginTop="14dp"
        android:background="@drawable/button"
        android:onClick="changeLanguage"
        android:text="@string/change_language"
        android:textColor="#000000" />
-->
    <Button
        android:id="@+id/ResetPhone"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TestResults"
        android:layout_below="@+id/TestResults"
        android:layout_marginTop="14dp"
        android:background="@drawable/button"
        android:onClick="resetPhone"
        android:text="@string/reset_phone"
        android:textColor="#000000" />
</RelativeLayout>
    </ScrollView>
</RelativeLayout>
