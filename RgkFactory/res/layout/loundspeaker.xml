<?xml version="1.0" encoding="utf-8"?> 

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android" 
  android:id="@+id/loudspeaker_layout" 
  android:layout_width="fill_parent" 
  android:layout_height="fill_parent"
  android:background="#ff000000">
          <TextView
	    android:id="@+id/loundspeaker_text"
	    android:layout_width="fill_parent"
	    android:layout_height="120dip"
	    android:textSize="20dip"
	    android:textColor="#32cd32"
	    android:gravity="center"
	    android:text="@string/loundspeaker_idea" />
	    
	 <LinearLayout
            android:id="@+id/loundspeaker_button_layout"
            android:orientation="vertical"
            android:layout_height="300dip"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            >
	      <Button
	         android:id="@+id/loundspeaker_pass"
	         android:text="@string/pass"
	         android:layout_height="0dip"
	         android:layout_width="fill_parent"
	         android:textSize="50sp"
	         android:layout_weight="1" />
	     <Button
	         android:id="@+id/loundspeaker_fail"
	         android:text="@string/fail"
	         android:layout_height="0dip"
	         android:layout_width="fill_parent"
	         android:textSize="50sp"
	         android:layout_weight="1" />
	</LinearLayout>
</RelativeLayout>